Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {{BIM}, 3D city models, building, country, {CityGML} 3.0, open standards, 3D cadastral maps, building permit checking, Sweden}
}

@article{noardoEuroSDRGeoBIMProject2019,
	title = {{EuroSDR} {GeoBIM} Project: A Study In Europe On How to Use the Potentials of {BIM} and Geo Data in Practice},
