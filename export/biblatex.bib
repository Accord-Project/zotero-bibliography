	number = {27},
	journaltitle = {Journal of Information Technology in Construction ({ITcon})},
	author = {Patacas, João and Dawood, Nashwan and Greenwood, David and Kassem, Mohamad},
	urldate = {2021-05-09},
	date = {2016-11-09},
	langid = {english},
	keywords = {{IFC}, {BIM}, {AIM}, {COBie}, Asset Information Model, Asset Information Requirements, {CMIS}, {IDM}}
}

