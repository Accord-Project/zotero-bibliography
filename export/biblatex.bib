	langid = {english},
	keywords = {{GraphDB}, Building information modeling ({BIM}), Knowledge modeling, Natural language processing ({NLP}), have, Automated compliance checking ({ACC}), Automated rule checking ({ARC}), Rule interpretation, Semantic alignment},
	annotation = {Highlights
