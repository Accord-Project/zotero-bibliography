	journaltitle = {Automation in Construction},
	shortjournal = {Automation in Construction},
	author = {Zhong, B. T. and Ding, L. Y. and Luo, H. B. and Zhou, Y. and Hu, Y. Z. and Hu, H. M.},
	urldate = {2021-05-09},
	date = {2012-12-01},
	langid = {english},
	keywords = {Ontology, Compliance checking, Construction quality, Regulation constraint, Semantic modeling, {SWRL}, {CQIEOntology}}
}

@article{martinsLicABIMBased2013,
