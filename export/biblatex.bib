	langid = {english},
	keywords = {ontology, Ontology, Information retrieval, terminology, {IFC}, Building Information Modeling ({BIM}), Industry Foundation Classes ({IFC}), Local context analysis ({LCA}), Query expansion, {BIMSeek}, search engine}
}

