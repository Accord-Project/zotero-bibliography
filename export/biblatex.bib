	author = {Koh, Jason and Ray, Steven and Hodges, Jack},
	date = {2017-01},
	keywords = {Standards, Architecture, Ontologies, Adaptation models, Buildings, {IoT}, Load modeling, Meteorology, Semantic Interoperability, Semantic Mediation, Smart Building, Smart Grid}
}

